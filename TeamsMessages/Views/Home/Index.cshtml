@model MessageViewModel

@{
    ViewData["Title"] = "Home Page";
    var postResult = TempData["PostAction"];
}

<div class="text-center">
    <h2 class="display-4">Send a message to a Teams channel </h2>
</div>

<div>Send message into channel <strong>@Model.ChannelName </strong> as user <strong>@Model.UserDisplayName</strong></div>

<form asp-controller="Home" asp-action="Index" class="row g-3">

    <div class="col-12">
        <label asp-for="@Model.Message" class="form-label"></label>
        <input asp-for="@Model.Message" class="form-control" />
    </div>    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Post Message</button>
    </div>
    <div>@postResult</div>
</form>